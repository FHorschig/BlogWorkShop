<header class="navbar navbar-inverse">
	<div class="container"><%= link_to "BlogName", root_path, class: "navbar-brand" %></div>
</header>
<section class="container">
	<article class="well" id="main_article"><%= @post.text %></article>

	<% if !@sidebar_links.blank? %>
		<nav class="well sidebar">
		  <ul class="list-group">
		  <% for item in @sidebar_links %>
		   	<li class="list-group-item" onclick=<%= "loadPost("+item.id.to_s+")" %>><%= item.title %></li>
		  <% end %>
		  </ul>
		</nav>
	<% end %>

</section>
<footer class="container">(c) BlogWorkShop</footer>
